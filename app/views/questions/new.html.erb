<% if @question.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @question.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Add a new question:</h1>

<%= form_for [@survey, @question] do |f| %>
  <%= f.label :question %>
  <%= f.text_field :question %>
  <p><%= f.submit %></p>
<% end %>
